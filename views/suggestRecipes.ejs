<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Suggest Recipes</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/home-<%= studentId %>">Recipe Hub</a>
    </div>
  </nav>

  <div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="m-0">ðŸ§© Suggested Recipes</h1>
      <form class="d-flex align-items-center" method="GET" action="/suggest-recipes-<%= studentId %>">
        <label class="me-2">Threshold %</label>
        <input class="form-control me-2" style="width:100px" type="number" min="0" max="100" name="threshold" value="<%= threshold %>">
        <button class="btn btn-success">Apply</button>
      </form>
    </div>

    <% if (suggested.length === 0) { %>
      <div class="alert alert-warning">No recipes meet the threshold of <%= threshold %>% coverage.</div>
    <% } else { %>
      <div class="table-responsive mb-4">
        <table class="table table-striped table-bordered align-middle">
          <thead class="table-dark">
            <tr>
              <th>Recipe</th>
              <th>Meal</th>
              <th>Cuisine</th>
              <th>Coverage</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% suggested.forEach(s => { const r = s.recipe; %>
              <tr>
                <td><%= r.title %></td>
                <td><%= r.mealType %></td>
                <td><%= r.cuisineType %></td>
                <td><strong><%= s.pct %>%</strong></td>
                <td class="d-flex gap-2">
                  <a class="btn btn-sm btn-outline-primary"
                     href="/check-ingredients-<%= studentId %>?recipeId=<%= encodeURIComponent(r.recipeId) %>">Check Pantry</a>
                  <a class="btn btn-sm btn-outline-secondary"
                     href="/scale-recipe-<%= studentId %>?recipeId=<%= encodeURIComponent(r.recipeId) %>">Scale</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>

    <details>
      <summary class="mb-2">See all recipe coverage</summary>
      <div class="table-responsive">
        <table class="table table-sm table-bordered">
          <thead class="table-light">
            <tr><th>Recipe</th><th>Coverage</th></tr>
          </thead>
          <tbody>
          <% all.forEach(s => { %>
            <tr><td><%= s.recipe.title %></td><td><%= s.pct %>%</td></tr>
          <% }) %>
          </tbody>
        </table>
      </div>
    </details>
  </div>
</body>
</html>
