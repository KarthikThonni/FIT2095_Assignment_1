<!DOCTYPE html>
<%- include("partials/header", { title: "Search Recipes", studentId }) %>

  <div class="container my-4">
    <h1 class="mb-3">üîç Search Recipes</h1>
    <form class="d-flex gap-2 mb-4" method="GET" action="/search-recipes-<%= studentId %>">
      <input class="form-control" type="text" name="q" placeholder="Title, chef, cuisine..." value="<%= q || '' %>">
      <button class="btn btn-primary">Search</button>
    </form>

    <% if (!results || results.length === 0) { %>
      <div class="alert alert-warning">No matching recipes.</div>
    <% } else { %>
      <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
          <tr>
            <th>ID</th><th>Title</th><th>Chef</th><th>Meal</th><th>Cuisine</th><th>Difficulty</th><th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% results.forEach(r => { %>
            <tr>
              <td><%= r.recipeId %></td>
              <td><%= r.title %></td>
              <td><%= r.chef %></td>
              <td><%= r.mealType %></td>
              <td><%= r.cuisineType %></td>
              <td><%= r.difficulty %></td>
              <td class="d-flex gap-2">
                <a class="btn btn-sm btn-outline-secondary" href="/scale-recipe-<%= studentId %>?recipeId=<%= encodeURIComponent(r.recipeId) %>">Scale</a>
                <a class="btn btn-sm btn-outline-primary" href="/check-ingredients-<%= studentId %>?recipeId=<%= encodeURIComponent(r.recipeId) %>">Check Pantry</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
<%- include("partials/footer") %>

