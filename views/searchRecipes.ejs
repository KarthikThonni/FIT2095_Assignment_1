<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Search Recipes</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>
<body class="bg-light">

  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/home-<%= studentId %>">Recipe Hub</a>
      <div class="collapse navbar-collapse"></div>
    </div>
  </nav>

  <div class="container my-4">
    <h1 class="mb-3">ğŸ” Search Recipes</h1>

    <form method="GET" action="/search-recipes-<%= studentId %>" class="row g-2 mb-4">
      <div class="col-md-8">
        <input class="form-control" name="q" value="<%= q %>" placeholder="Search by title, chef, or cuisineâ€¦" />
      </div>
      <div class="col-md-4 d-grid">
        <button class="btn btn-success" type="submit">Search</button>
      </div>
    </form>

    <% if (!q) { %>
      <div class="alert alert-info">Tip: try â€œtoastâ€, â€œmarioâ€, or â€œitalianâ€.</div>
    <% } %>

    <% if (results.length === 0) { %>
      <div class="alert alert-warning">No recipes found.</div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Chef</th>
              <th>Meal Type</th>
              <th>Cuisine</th>
              <th>Difficulty</th>
              <th>Prep</th>
              <th>Servings</th>
            </tr>
          </thead>
          <tbody>
            <% results.forEach(r => { %>
              <tr>
                <td><%= r.recipeId %></td>
                <td><%= r.title %></td>
                <td><%= r.chef %></td>
                <td><%= r.mealType %></td>
                <td><%= r.cuisineType %></td>
                <td><%= r.difficulty %></td>
                <td><%= r.prepTime %> min</td>
                <td><%= r.servings %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

</body>
</html>
