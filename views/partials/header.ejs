<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= typeof title !== 'undefined' ? title : 'CloudKitchen Pro' %></title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/home-<%= studentId %>">CloudKitchen Pro</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topnav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="topnav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">

          <!-- Home -->
          <li class="nav-item">
            <a class="nav-link" href="/home-<%= studentId %>">Home</a>
          </li>

          <!-- Recipes: chefs only -->
          <% if (user && user.role === 'chef') { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Recipes</a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/recipes-<%= studentId %>">View Recipes</a></li>
                <li><a class="dropdown-item" href="/add-recipe-<%= studentId %>">Add Recipe</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/filter-recipes-<%= studentId %>">Filter Recipes</a></li>
                <li><a class="dropdown-item" href="/search-recipes-<%= studentId %>">Search Recipes</a></li>
                <li><a class="dropdown-item" href="/scale-recipe-<%= studentId %>">Scale Recipe</a></li>
              </ul>
            </li>
          <% } %>

          <!-- Inventory: everyone -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Inventory</a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/inventory-<%= studentId %>">View Inventory</a></li>
              <li><a class="dropdown-item" href="/add-inventory-<%= studentId %>">Add Item</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/check-ingredients-<%= studentId %>">Check Pantry</a></li>
              <li><a class="dropdown-item" href="/suggest-recipes-<%= studentId %>">Suggested Recipes</a></li>
            </ul>
          </li>

          <!-- Reports: admin only (placeholder) -->
          <% if (user && user.role === 'admin') { %>
            <li class="nav-item">
              <a class="nav-link" href="#" tabindex="-1" aria-disabled="true">Reports</a>
            </li>
          <% } %>
        </ul>

        <!-- Right side: user + logout -->
        <div class="d-flex align-items-center gap-2">
          <% if (user) { %>
            <span class="navbar-text text-white small">
              Welcome, <strong><%= user.fullname %></strong>
              <span class="badge bg-light text-dark ms-2"><%= user.role %></span>
            </span>
            <form method="POST" action="/logout-<%= studentId %>">
              <button class="btn btn-sm btn-outline-light">Logout</button>
            </form>
          <% } else { %>
            <a class="btn btn-sm btn-outline-light" href="/login-<%= studentId %>">Login</a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>
  <div class="container my-4">
