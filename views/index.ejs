<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Recipe Hub - Home</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/home-<%= studentId %>">Recipe Hub</a>
    </div>
  </nav>

  <div class="container my-5">
    <h1 class="mb-4">👋 Welcome to Recipe Hub</h1>
    <p class="lead">
      Manage your <strong>recipes</strong> and <strong>inventory</strong> easily.
      Your Student ID: <code><%= studentId %></code>
    </p>

    <div class="row g-4 mt-4">
      <!-- Recipes -->
      <div class="col-md-6">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h4 class="card-title">📘 Recipes</h4>
            <p class="card-text">Create, browse, filter, search and scale recipes.</p>
            <div class="d-grid gap-2">
              <a href="/recipes-<%= studentId %>" class="btn btn-outline-primary">View Recipes</a>
              <a href="/add-recipe-<%= studentId %>" class="btn btn-outline-success">Add Recipe</a>
              <a href="/filter-recipes-<%= studentId %>" class="btn btn-outline-dark">Filter Recipes</a>
              <a href="/search-recipes-<%= studentId %>" class="btn btn-outline-dark">Search Recipes</a>
              <a href="/scale-recipe-<%= studentId %>" class="btn btn-outline-secondary">Scale Recipe</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Inventory -->
      <div class="col-md-6">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h4 class="card-title">🛒 Inventory</h4>
            <p class="card-text">Track pantry items, costs, and freshness.</p>
            <div class="d-grid gap-2">
              <a href="/inventory-<%= studentId %>" class="btn btn-outline-primary">View Inventory</a>
              <a href="/add-inventory-<%= studentId %>" class="btn btn-outline-success">Add Inventory Item</a>
              <a href="/check-ingredients-<%= studentId %>" class="btn btn-outline-warning">Check Pantry</a>
              <a href="/suggest-recipes-<%= studentId %>" class="btn btn-outline-info">Suggested Recipes</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Preview -->
    <div class="alert alert-info mt-5">
      <h5 class="mb-1">📊 Quick Stats</h5>
      <ul class="mb-0">
        <li>Total Recipes: <%= stats.recipeCount %></li>
        <li>Total Inventory Items: <%= stats.inventoryCount %></li>
        <li>Unique Cuisine Types: <%= stats.cuisineTypes %></li>
        <li>Total Inventory Value: $<%= stats.totalInventoryValue %></li>
      </ul>
    </div>

    <!-- Recent Activity -->
    <div class="row mt-4">
      <div class="col-md-6">
        <h5>🆕 Recent Recipes</h5>
        <% if (recentRecipes.length === 0) { %>
          <p class="text-muted">No recipes yet.</p>
        <% } else { %>
          <ul>
            <% recentRecipes.forEach(r => { %>
              <li><%= r.title %> (<%= r.createdDate %>)</li>
            <% }) %>
          </ul>
        <% } %>
      </div>
      <div class="col-md-6">
        <h5>⏳ Expiring Soon</h5>
        <% if (expiringItems.length === 0) { %>
          <p class="text-muted">No items expiring soon.</p>
        <% } else { %>
          <ul>
            <% expiringItems.forEach(i => { %>
              <li><%= i.ingredientName %> (in <%= i.daysToExpire %> days)</li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    </div>
  </div>

</body>
</html>
