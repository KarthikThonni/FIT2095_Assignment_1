<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login - CloudKitchen Pro</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container my-5" style="max-width:480px;">
    <h1 class="h3 mb-3">Login</h1>

    <% if (errors && errors.length) { %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% errors.forEach(e => { %><li><%= e %></li><% }) %>
        </ul>
      </div>
    <% } %>

    <form method="POST" action="/login-<%= studentId %>">
      <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" type="email" name="email" required value="<%= (data && data.email) || '' %>">
      </div>
      <div class="mb-3">
        <label class="form-label">Password</label>
        <input class="form-control" type="password" name="password" required>
      </div>
      <button class="btn btn-primary w-100">Login</button>
    </form>

    <div class="mt-3">
      <a href="/register-<%= studentId %>">Register</a>
    </div>
  </div>
  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
