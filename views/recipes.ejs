<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Recipe Hub - Recipes</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/home-<%= studentId %>">Recipe Hub</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link active" href="/recipes-<%= studentId %>">Recipes</a></li>
          <li class="nav-item"><a class="nav-link" href="/inventory-<%= studentId %>">Inventory</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Page Header -->
  <div class="container mt-4">
    <h1 class="mb-4">ðŸ“– Recipes</h1>
    
    <a href="/add-recipe-<%= studentId %>" class="btn btn-success mb-3">âž• Add Recipe</a>

    <% if (recipes.length === 0) { %>
      <div class="alert alert-warning">No recipes found.</div>
    <% } else { %>
      <table class="table table-striped table-bordered">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Chef</th>
            <th>Meal Type</th>
            <th>Cuisine</th>
            <th>Prep Time</th>
            <th>Difficulty</th>
            <th>Servings</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% recipes.forEach(recipe => { %>
            <tr>
              <td><%= recipe.recipeId %></td>
              <td><%= recipe.title %></td>
              <td><%= recipe.chef %></td>
              <td><%= recipe.mealType %></td>
              <td><%= recipe.cuisineType %></td>
              <td><%= recipe.prepTime %> mins</td>
              <td><%= recipe.difficulty %></td>
              <td><%= recipe.servings %></td>
              <td><%= recipe.createdDate %></td>
              <td>
                <form method="POST" action="/api/delete-recipe-<%= studentId %>">
                  <input type="hidden" name="recipeId" value="<%= recipe.recipeId %>">
                  <button type="submit" class="btn btn-sm btn-danger">ðŸ—‘ Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>

</body>
</html>
