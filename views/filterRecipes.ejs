<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Filter Recipes</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>
<body class="bg-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container">
    <a class="navbar-brand" href="/home-<%= studentId %>">Recipe Hub</a>
  </div>
</nav>

<div class="container my-4">
  <h1 class="mb-3">ðŸ”Ž Filter Recipes</h1>

  <form method="GET" action="/filter-recipes-<%= studentId %>" class="row g-3 mb-4">
    <div class="col-md-3">
      <label class="form-label">Meal Type</label>
      <select class="form-select" name="mealType">
        <option <%= selected.mealType==="All"?"selected":"" %>>All</option>
        <option <%= selected.mealType==="Breakfast"?"selected":"" %>>Breakfast</option>
        <option <%= selected.mealType==="Lunch"?"selected":"" %>>Lunch</option>
        <option <%= selected.mealType==="Dinner"?"selected":"" %>>Dinner</option>
        <option <%= selected.mealType==="Snack"?"selected":"" %>>Snack</option>
      </select>
    </div>

    <div class="col-md-3">
      <label class="form-label">Cuisine Type</label>
      <input type="text" name="cuisineType" value="<%= selected.cuisineType || "" %>" class="form-control">
    </div>

    <div class="col-md-3">
      <label class="form-label">Difficulty</label>
      <select class="form-select" name="difficulty">
        <option <%= selected.difficulty==="All"?"selected":"" %>>All</option>
        <option <%= selected.difficulty==="Easy"?"selected":"" %>>Easy</option>
        <option <%= selected.difficulty==="Medium"?"selected":"" %>>Medium</option>
        <option <%= selected.difficulty==="Hard"?"selected":"" %>>Hard</option>
      </select>
    </div>

    <div class="col-md-3 d-flex align-items-end">
      <button type="submit" class="btn btn-success w-100">Apply Filters</button>
    </div>
  </form>

  <% if (recipes.length === 0) { %>
    <div class="alert alert-warning">No recipes match your filters.</div>
  <% } else { %>
    <table class="table table-bordered">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Meal Type</th>
          <th>Cuisine</th>
          <th>Difficulty</th>
          <th>Prep Time</th>
          <th>Servings</th>
        </tr>
      </thead>
      <tbody>
        <% recipes.forEach(r => { %>
          <tr>
            <td><%= r.recipeId %></td>
            <td><%= r.title %></td>
            <td><%= r.mealType %></td>
            <td><%= r.cuisineType %></td>
            <td><%= r.difficulty %></td>
            <td><%= r.prepTime %> mins</td>
            <td><%= r.servings %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>

</body>
</html>
